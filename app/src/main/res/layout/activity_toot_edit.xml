<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:orientation="vertical"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:id="@+id/linearLayout">

  <com.google.android.material.textfield.TextInputEditText
          android:layout_width="0dp"
          android:layout_height="120dp"
          android:inputType="textMultiLine"
          android:text=""
          android:ems="10"
          android:minLines="4"
          android:layout_marginEnd="8dp"
          app:layout_constraintEnd_toEndOf="parent"
          android:layout_marginStart="8dp"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          android:hint="@string/inputMainTextHint"
          android:id="@+id/statusContent"
          android:maxLines="10"/>

  <Button
          android:text="Button"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:id="@+id/buttonSend"
          app:layout_constraintTop_toBottomOf="@+id/statusContent"
          app:layout_constraintEnd_toEndOf="parent"
          android:layout_margin="8dp"/>

  <Spinner
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:id="@+id/visibilitySpinner"
          app:layout_constraintEnd_toStartOf="@+id/buttonSend"
          app:layout_constraintBottom_toBottomOf="@+id/buttonSend"
          app:layout_constraintTop_toTopOf="@+id/buttonSend"
          android:layout_margin="8dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>