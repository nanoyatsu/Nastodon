<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools">

  <data>

    <import type="android.view.View" />

    <variable
      name="vm"
      type="com.nanoyatsu.nastodon.view.timelineFrame.TimelineFrameViewModel" />

  </data>

  <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.timelineFrame.TimelineFrameFragment">

    <androidx.fragment.app.FragmentContainerView
      android:id="@+id/content_main"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      app:layout_constraintBottom_toTopOf="@id/navigation"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      tools:layout="@layout/content_main" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
      android:id="@+id/floating_edit"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_margin="@dimen/fab_margin"
      android:onClick="@{() -> vm.onTootClicked()}"
      app:layout_constraintBottom_toTopOf="@id/navigation"
      app:layout_constraintEnd_toEndOf="parent"
      app:srcCompat="@drawable/ic_edit" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
      android:id="@+id/navigation"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginStart="0dp"
      android:layout_marginEnd="0dp"
      android:background="?android:attr/windowBackground"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintTop_toBottomOf="@id/content_main"
      app:menu="@menu/navigation" />

    <include
      android:id="@+id/progress_view"
      layout="@layout/item_progress"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:visibility="@{safeUnbox(vm.progressVisible) ? View.VISIBLE : View.GONE}"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      tools:visibility="visible" />
  </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
